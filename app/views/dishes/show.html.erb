<a href="#" class="js-next" data-id="<%=@dish.id%>">Next Dish</a>
<h2 class="dishName"><%= @dish.name%></h2>
<p class="dishCookTime"><%= @dish.cook_time%></p>
<br>
<%= link_to "Edit", edit_dish_path(@dish) %><br>
<%= link_to "Delete", dish_path(@dish), method: :delete, data: { confirm: 'are you sure?'} %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-next").on("click", function() {
      let nextId = parseInt($(".js-next").attr("data-id")) + 1;
      $.get("/dishes/" + nextId + ".json", function(data){
        let dish = data;
        $(".dishName").text(dish["name"]);
        $(".dishCookTime").text(dish["cook_time"]);
        $("li").text(dish["dish_ingredients"] + dish["ingredients"])
        $(".js-next").attr("data-id", dish["id"]);
      })
    })
  });
</script>
