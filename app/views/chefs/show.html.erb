<h1>Chef <%=@chef.name%></h1>
<% if @chef.dishes.any? %>
  Quick Dishes:
  <br>
  <% @chef.dishes.less_than_30.each do |dish| %>
  <ul>
    <li><a href="<%=@chef.id%>/dishes/<%=dish.id%>"><%= dish.name%></a></li>
  </ul>
  <%end%>
  <br>
  Little More Time:
  <br>
  <% @chef.dishes.less_than_60.more_than_30.each do |dish| %>
    <ul>
      <li><a href="<%=@chef.id%>/dishes/<%=dish.id%>"><%= dish.name%></a></li>
    </ul>
<%end%>
<br>
  Longer than an Hour:
<br>
  <% @chef.dishes.more_than_60.each do |dish| %>
  <ul>
    <li><a href="<%=@chef.id%>/dishes/<%=dish.id%>"><%= dish.name%></a></li>
  </ul>
  <%end%>
<%else%>
  <p> No dishes yet! </p>
<%end%>

<a href="#" class="js-next" data-id="<%=@chef.dish.id%>">Next Dish</a>
<a href="/chefs/<%=@chef.id%>/dishes/new">Add a dish!</a>

<script type="text/javascript" charset="utf-8">
 $(function() {
   $(".js-next").on("click", function() {
     let nextId = parseInt($(".js-next").attr("data-id")) + 1;
     $.get("/dishes/" + nextId + ".json", function(data){
       let dish = data;
       $(".dishName").text(dish["name"]);
       $(".dishCookTime").text(dish["cook_time"]);
       $("li").text(dish["dish_ingredients"] + dish["ingredients"])
     })
   })
 });
</script>
