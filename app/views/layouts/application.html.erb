<!DOCTYPE html>
<html>
  <head>
    <title>ChefsClubRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to "#{current_user.name}", chef_path(current_user) %>
      <%= link_to "Chefs Library", chefs_path %>
      <a id="new-dish-link" href="/chefs/<%=@chef.id%>/dishes/new">Add a dish!</a>
    <%end%>

    <%= yield %>

    <% if current_user %>
      <li><%= link_to "Log Out", signout_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "Sign Up", new_chef_path %></li>
      <li><%= link_to "Sign In", signin_path %></li>
    <% end %>
  </body>
</html>
